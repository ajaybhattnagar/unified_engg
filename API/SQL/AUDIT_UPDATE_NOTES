DELIMITER $$
CREATE TRIGGER AUDIT_UPDATE_NOTES
AFTER UPDATE
   ON NOTES FOR EACH ROW
BEGIN
	IF OLD.NOTES <> new.NOTES THEN
		INSERT INTO `Sda`.`AUDIT` (`UNIQUE_ID`, `COLUMN_NAME`, `OLD_VALUE`, `NEW_VALUE`, `DONE_BY`)	VALUES	(NEW.UNIQUE_ID,	'NOTES', OLD.NOTES, NEW.NOTES, USER());	
	END IF;
	  IF OLD.IS_ACTIVE <> new.IS_ACTIVE THEN
		INSERT INTO `Sda`.`AUDIT` (`UNIQUE_ID`, `COLUMN_NAME`, `OLD_VALUE`, `NEW_VALUE`, `DONE_BY`)	VALUES	(NEW.UNIQUE_ID,	'IS_ACTIVE', OLD.IS_ACTIVE, NEW.IS_ACTIVE, USER());	
	END IF;
END$$ 
DELIMITER ;