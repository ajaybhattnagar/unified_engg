DELIMITER $$
CREATE TRIGGER AUDIT_UPDATE_REDEEM
AFTER UPDATE
   ON REDEEM FOR EACH ROW
BEGIN
	IF OLD.DATE_REDEEMED <> new.DATE_REDEEMED THEN
		INSERT INTO `Sda`.`AUDIT` (`UNIQUE_ID`, `COLUMN_NAME`, `OLD_VALUE`, `NEW_VALUE`, `DONE_BY`)	VALUES	(NEW.UNIQUE_ID,	'DATE_REDEEMED', OLD.DATE_REDEEMED, NEW.DATE_REDEEMED, USER());	
	END IF;
    IF OLD.CHECK_AMOUNT <> new.CHECK_AMOUNT THEN
		INSERT INTO `Sda`.`AUDIT` (`UNIQUE_ID`, `COLUMN_NAME`, `OLD_VALUE`, `NEW_VALUE`, `DONE_BY`)	VALUES	(NEW.UNIQUE_ID,	'CHECK_AMOUNT', OLD.CHECK_AMOUNT, NEW.CHECK_AMOUNT, USER());	
	END IF;
    
    IF OLD.CHECK_NUMBER <> new.CHECK_NUMBER THEN		
		INSERT INTO `Sda`.`AUDIT` (`UNIQUE_ID`, `COLUMN_NAME`, `OLD_VALUE`, `NEW_VALUE`, `DONE_BY`)	VALUES	(NEW.UNIQUE_ID,	'CHECK_NUMBER' , OLD.CHECK_NUMBER, NEW.CHECK_NUMBER, USER());
	END IF;
	
    IF OLD.CHECK_RECEIVED <> new.CHECK_RECEIVED THEN
        INSERT INTO `Sda`.`AUDIT` (`UNIQUE_ID`, `COLUMN_NAME`, `OLD_VALUE`, `NEW_VALUE`, `DONE_BY`)	VALUES	(NEW.UNIQUE_ID,	'CHECK_RECEIVED' , OLD.CHECK_RECEIVED, NEW.CHECK_RECEIVED, USER());  
	END IF;
    
    IF OLD.SOURCE <> new.SOURCE THEN
		INSERT INTO `Sda`.`AUDIT` (`UNIQUE_ID`, `COLUMN_NAME`, `OLD_VALUE`, `NEW_VALUE`, `DONE_BY`)	VALUES	(NEW.UNIQUE_ID,	'SOURCE' , OLD.SOURCE, NEW.SOURCE, USER()); 
	END IF;
    
    IF OLD.METHOD <> new.METHOD THEN
		INSERT INTO `Sda`.`AUDIT` (`UNIQUE_ID`, `COLUMN_NAME`, `OLD_VALUE`, `NEW_VALUE`, `DONE_BY`)	VALUES	(NEW.UNIQUE_ID,	'METHOD' , OLD.METHOD, NEW.METHOD, USER());
	END IF;
    
    IF OLD.DESCRIPTION <> new.DESCRIPTION THEN
		INSERT INTO `Sda`.`AUDIT` (`UNIQUE_ID`, `COLUMN_NAME`, `OLD_VALUE`, `NEW_VALUE`, `DONE_BY`)	VALUES	(NEW.UNIQUE_ID,	'DESCRIPTION' , OLD.DESCRIPTION, NEW.DESCRIPTION, USER());
    END IF;
END$$ 
DELIMITER ;