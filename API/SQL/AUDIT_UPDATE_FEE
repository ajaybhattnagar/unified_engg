DELIMITER $$
CREATE TRIGGER AUDIT_UPDATE_FEES
AFTER UPDATE
   ON FEES FOR EACH ROW
BEGIN
	IF OLD.CATEGORY <> new.CATEGORY THEN
		INSERT INTO `Sda`.`AUDIT` (`UNIQUE_ID`, `COLUMN_NAME`, `OLD_VALUE`, `NEW_VALUE`, `DONE_BY`)	VALUES	(NEW.UNIQUE_ID,	'CATEGORY', OLD.CATEGORY, NEW.CATEGORY, USER());	
	END IF;
    
    IF OLD.DESCRIPTION <> new.DESCRIPTION THEN		
		INSERT INTO `Sda`.`AUDIT` (`UNIQUE_ID`, `COLUMN_NAME`, `OLD_VALUE`, `NEW_VALUE`, `DONE_BY`)	VALUES	(NEW.UNIQUE_ID,	'DESCRIPTION' , OLD.DESCRIPTION, NEW.DESCRIPTION, USER());
	END IF;
	
    IF OLD.AMOUNT <> new.AMOUNT THEN
        INSERT INTO `Sda`.`AUDIT` (`UNIQUE_ID`, `COLUMN_NAME`, `OLD_VALUE`, `NEW_VALUE`, `DONE_BY`)	VALUES	(NEW.UNIQUE_ID,	'AMOUNT' , OLD.AMOUNT, NEW.AMOUNT, USER());  
	END IF;
    
    IF OLD.INTEREST_ACC_INTERVAL <> new.INTEREST_ACC_INTERVAL THEN
		INSERT INTO `Sda`.`AUDIT` (`UNIQUE_ID`, `COLUMN_NAME`, `OLD_VALUE`, `NEW_VALUE`, `DONE_BY`)	VALUES	(NEW.UNIQUE_ID,	'INTEREST_INTERVAL' , OLD.INTEREST_ACC_INTERVAL, NEW.INTEREST_ACC_INTERVAL, USER()); 
	END IF;
    
    IF OLD.EFFECTIVE_DATE <> new.EFFECTIVE_DATE THEN
		INSERT INTO `Sda`.`AUDIT` (`UNIQUE_ID`, `COLUMN_NAME`, `OLD_VALUE`, `NEW_VALUE`, `DONE_BY`)	VALUES	(NEW.UNIQUE_ID,	'EFFECTIVE_DATE' , OLD.EFFECTIVE_DATE, NEW.EFFECTIVE_DATE, USER());
	END IF;
    
    IF OLD.EFFECTIVE_END_DATE <> new.EFFECTIVE_END_DATE THEN
		INSERT INTO `Sda`.`AUDIT` (`UNIQUE_ID`, `COLUMN_NAME`, `OLD_VALUE`, `NEW_VALUE`, `DONE_BY`)	VALUES	(NEW.UNIQUE_ID,	'EFFECTIVE_END_DATE' , OLD.EFFECTIVE_END_DATE, NEW.EFFECTIVE_END_DATE, USER());
    END IF;
END$$ 
DELIMITER ;